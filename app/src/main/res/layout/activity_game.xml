<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <LinearLayout
        android:id="@+id/opponentCardLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/opponentCard"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:contentDescription="image of the back of a card"
            android:src="@drawable/back_of_card"
            android:layout_weight="2"/>

        <TextView
            android:id="@+id/playerScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player: 0"
            android:textSize="16sp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/opponentScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opponent: 0"
            android:textSize="16sp"
            android:layout_weight="1" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/deckAndFlippedCardLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/opponentCardLayout"
        app:layout_constraintBottom_toTopOf="@+id/playerCardLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/flippedCard"
            android:layout_marginTop="20dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:contentDescription="image of the back of a card"
            android:src="@drawable/back_of_card"
            android:layout_weight="1"/>

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:contentDescription="image of the back of a card"
            android:src="@drawable/back_of_card"
            android:layout_weight="3"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/playerCardLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnLayout"
        >

        <ImageView
            android:id="@+id/playerCard"
            android:layout_marginTop="20dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:contentDescription="image of the back of a card"
            android:src="@drawable/back_of_card"
            android:layout_weight="2"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnLayout"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/playerCardLayout">

        <Button
            android:id="@+id/flipBtn"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Flip Card"
            android:visibility="invisible" />

        <Button
            android:id="@+id/drawBtn"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Draw Card" />

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>